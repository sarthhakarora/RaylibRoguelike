{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build",
        "type": "shell",
        "command": "cmake",
        "args": [
          "--build",
          "${workspaceFolder}/build"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Run",
        "type": "shell",
        "command": "./game",
        "options": {
          "cwd": "${workspaceFolder}/build"
        },
        "group": {
          "kind": "test",
          "isDefault": true
        },
        "dependsOn": "Build"
      }
    ]
  }
  